<h1>New Game</h1>

<h2><%= @letters %></h2>

<p>What is the longest word you can find?</p>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" class="form-control">
  <button class="btn btn-outline-primary" type="submit" id="button-addon2">Ask!</button>
  <input name="letters" type="hidden" value="<%= @letters %>" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
